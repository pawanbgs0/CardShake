<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/card.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="/<% if (editing) { %>edit-card/<%= card.id %><% } else { %>add-card<% } %>" method="POST">
            <div class="form-control">
                <label for="name">Name</label>
                <input type="text" name="name" id="name" value="<% if (editing) { %><%= card.name %><% } %>">
            </div>
            <div class="form-control">
                <label for="imageUrl">Image URL</label>
                <input type="text" name="imageUrl" id="imageUrl" value="<% if (editing) { %><%= card.imageUrl %><% } %>">
            </div>
            <div class="form-control">
                <label for="phone">Phone</label>
                <input type="text" name="phone" id="phone" value="<% if (editing) { %><%= card.phone %><% } %>">
            </div>
            <div class="form-control">
                <label for="address">Address</label>
                <textarea name="address" id="address" rows="5"><% if (editing) { %><%= card.address %><% } %></textarea>
            </div>
            <% if (editing) { %>
                <input type="hidden" value="<%= card.id %>" name="cardId">
            <% } %>

            <button class="btn" type="submit"><% if (editing) { %>Update Card<% } else { %>Add Card<% } %></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>